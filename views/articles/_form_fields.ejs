<div class="form-group">
    <lable for="title">Title</lable>
    <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control mt-2">
</div>
<div class="form-group">
    <lable for="descrption">Description</lable>
    <textarea name="description" id="descrption" class="form-control mt-2"><%= article.description %></textarea>
</div>
<div class="form-group">
    <lable for="markdown">Markdown</lable>
    <textarea required name="markdown" id="markdown" class="form-control mt-2"><%= article.markdown %></textarea>
</div>

<a href="/" class="btn btn-secondary mt-4">Cancel</a>
<button type="submit" class="btn btn-primary mt-4">Submit</button>